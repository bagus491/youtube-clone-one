<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="scss/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  </head>
  <body>
    <nav>
        <div class="nav">
    
            <div class="sideNav">
                <div class="first">
                    <div class="size-button">
                        <button type="button" class="btn-hide btn btn-primary"><i class="bi bi-list"></i></button>
                    </div>
                    <ul>
                        <li><a href="/dasbord"><i class="bi bi-fast-forward-circle-fill"> YouDo</i></a></li>
                    </ul>
                </div>
    
                <div class="page">
                    <ul>
                        <li><a href="/dasbord">Beranda</a></li>
                    </ul>
                        <div class="searchform">
                            <form class="d-flex" role="search" style="display: flex; flex-direction: column;" action="/search" method="get">
                                <input class="form-control me-2" type="search" name="q" placeholder="Search" aria-label="Search">
                                <br>
                                <button class="btn btn-outline-success" type="submit">Search</button>
                              </form>
                        </div>
                   
                </div>
            </div>
       
    
        <div class="topNav">
           <div class="width-flex">
            <div class="flex">
                <div class="tittle">
                    <div class="size-button">
                        <button type="button" class="btn-show btn btn-primary"><i class="bi bi-list"></i></button>
                    </div>
                    <ul>
                        <li><a href="/dasbord"><i class="bi bi-fast-forward-circle-fill"> YouDo</i></a></li>
                    </ul>
                </div>
                <div class="search">
                    <form class="d-flex" role="search" action="/search" method="get">
                        <input class="form-control me-2" type="search" name="q" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                      </form>
                </div>
                <div class="profile">
                    <ul>
                        <li><a href="/dasbord/upload"><i class="bi bi-camera-reels"></i></a></li>
                        <li><a href="#"><i class="bi bi-bell"></i></a></li>
                        <li><a href="/dasbord/profile">Profile</a></li>
                        <li><a href="/dasbord/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
           </div>
        </div>
    </div>
    
    
    <script>
        const btn = document.querySelector('.btn-show')
        const side = document.querySelector('.sideNav')
        const btnhide = document.querySelector('.btn-hide')
        btn.addEventListener('click',() => {
            side.classList.toggle('active')
        })
    
        btnhide.addEventListener('click',() => {
            side.classList.toggle('active')
        })
    </script>
    </nav>

    <div class="container" style="display: flex; flex-wrap: wrap; flex-direction: column;">
        <div class="list-card" style="flex: 50%; padding: 20px; display: flex; flex-wrap: wrap;">
        <% if (Video.length != 0) { %>
          <% Video.forEach(e => { %>
            <div class="card" style="width: 20rem; overflow: hidden; margin-left: 15px; margin-top: 15px;">
              <figure>
                <video loop autoplay muted="autoplay"  width="100%" height="200px" class="played" >
                    <source src="<%= e.VideoPath %>" type="video/mp4">
                </video>
              </figure>
                <div class="card-body">
                  <h5 class="card-title"><a href="/watch/<%= e._id %>" style="color: black;"><%= e.Title %></a></h5>
                  <p class="card-text"><%= e.Desc %></p>
                  <p class="text-muted">Views: <%= e.Views %></p>        
                </div>
              </div>
          <% }) %>
            <% } else {%>
                <h1>Empty Video</h1>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>