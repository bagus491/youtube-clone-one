<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="../scss/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  </head>
  <body>
    <% if (user) { %>
        <nav>
            <div class="nav">
        
                <div class="sideNav">
                    <div class="first">
                        <div class="size-button">
                            <button type="button" class="btn-hide btn btn-primary"><i class="bi bi-list"></i></button>
                        </div>
                        <ul>
                            <li><a href="/dasbord"><i class="bi bi-fast-forward-circle-fill"> YouDo</i></a></li>
                        </ul>
                    </div>
        
                    <div class="page">
                        <ul>
                            <li><a href="/dasbord">Beranda</a></li>
                        </ul>
                            <div class="searchform">
                                <form class="d-flex" role="search" style="display: flex; flex-direction: column;">
                                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                    <br>
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                  </form>
                            </div>
                       
                    </div>
                </div>
           
        
            <div class="topNav">
               <div class="width-flex">
                <div class="flex">
                    <div class="tittle">
                        <div class="size-button">
                            <button type="button" class="btn-show btn btn-primary"><i class="bi bi-list"></i></button>
                        </div>
                        <ul>
                            <li><a href="/dasbord"><i class="bi bi-fast-forward-circle-fill"> YouDo</i></a></li>
                        </ul>
                    </div>
                    <div class="search">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                          </form>
                    </div>
                    <div class="profile">
                        <ul>
                            <li><a href="/dasbord/upload"><i class="bi bi-camera-reels"></i></a></li>
                            <li><a href="#"><i class="bi bi-bell"></i></a></li>
                            <li><a href="/dasbord/profile">Profile</a></li>
                            <li><a href="/dasbord/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
               </div>
            </div>
        </div>
        
        
        <script>
            const btn = document.querySelector('.btn-show')
            const side = document.querySelector('.sideNav')
            const btnhide = document.querySelector('.btn-hide')
            btn.addEventListener('click',() => {
                side.classList.toggle('active')
            })
        
            btnhide.addEventListener('click',() => {
                side.classList.toggle('active')
            })
        </script>
        </nav>
    <% }  else {%>
        <%- include('./nav.ejs') %>
    <% } %>
        
    <div class="container-new">
        <div class="flex-video">
           <% if (Data) { %>
            <figcaption>
                <video controls autoplay  width="100%" height="500px">
                    <source src="<%= Data.VideoPath %>" type="video/mp4">
                </video>
            </figcaption>
            <h1><%= Data.Title %></h1>
            <h3><%= Data.username %></h3>
            <p class="card-text">Views: <%= Data.Views %></p>
            <div class="card" style="width: 100%;">
                <div class="card-body">
                  <h6><%= Data.PostDate %></h6>
                  <br>
                  <p><%= Data.Desc %></p>
                </div>
              </div>
           <% } else {%>
            <h1>404 Not Found</h1>
            <% } %>
        </div>
        <div class="flex-sub">
            <br><br><br>
            <% filterData.forEach(e => { %>
                <div class="card" style="width: 18rem; margin-left: 10px; margin-top: 10px;">
                    <div class="card-body">
                      <h5 class="card-title"><a href="/watch/<%= e._id %>" style="text-decoration: none; color: black;"><%= e.Title %></a></h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%= e.username %></h6>
                      <p class="card-text"><%= e.Views %></p>
                    </div>
                  </div>
              <% }) %>
                   
          </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>